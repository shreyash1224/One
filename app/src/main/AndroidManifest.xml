        android:icon="@mipmap/ic_launcher"
        android:label="One Diary App"
        android:theme="@style/Theme.One">

        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
